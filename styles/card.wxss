.cards {
  padding: 16px;
}

  .card {
    background: #ffffff;
    margin-bottom: 16px;
    transition: 0.005s all;
  }

    .card.hover {
      box-shadow: 0 32px 48px rgba(0, 0, 0, 0.5)
    }

    .card image, .card vedio {
      height: 36vh;
    }

    .card .content {
      padding: 48rpx 48rpx 64rpx;
    }

    .card .header {
      font-size: 48rpx;
      font-weight: bold;
      letter-spacing: 2rpx;
      margin-bottom: 48rpx;
    }

    .card .header::after {
      content: "";
      display: block;
      width: 180px;
      border-bottom: 2px solid #000;
      padding-bottom: 8px;
    }

    .card .sub_header {
      font-size: 32rpx;
      letter-spacing: 3rpx;
      text-transform: uppercase;
    }

    .card .description, .card .meta {
      font-size: 32rpx;
      color: rgba(0, 0, 0, 0.85);
      margin-bottom: 8px;
    }
